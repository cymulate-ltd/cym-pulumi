{
	"Version": "2012-10-17",
	"Statement": [
		{
			"Effect": "Allow",
			"Principal": {
				"Federated": "arn:aws:iam::{{ account }}:oidc-provider/oidc.eks.{{ region }}.amazonaws.com/id/{{ cluster_id }}"
			},
			"Action": "sts:AssumeRoleWithWebIdentity",
			"Condition": {
				"StringEquals": {
					"oidc.eks.{{ region }}.amazonaws.com/id/{{ cluster_id }}:aud": "sts.amazonaws.com"
				}
			}
		}
	]
}